{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "assets/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1.js" },

    // Polls pages
    { "src": "/polls/setup", "dest": "/polls-setup.html" },
    { "src": "/polls", "dest": "/polls.html" },

    // Default route (dashboard)
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
